<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>MariCommands.Sentry</PackageId>
    <AssemblyName>MariCommands.Sentry</AssemblyName>
    <RootNamespace>MariCommands.Sentry</RootNamespace>
    <Version>2.1.5-beta</Version>
    <Authors>renanrcp</Authors>
    <Company>MariBot</Company>
    <Description>MariCommands integration for Sentry - Open-source error tracking that helps developers monitor and fix crashes in real time.</Description>
    <Copyright>2019 - 2020 renanrcp. All rights reserved.</Copyright>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/MariBotOfficial/MariCommands.Sentry</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MariBotOfficial/MariCommands.Sentry</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIcon>Sentry.png</PackageIcon>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MariCommands" Version="1.0.0.2-alpha" />
    <PackageReference Include="Sentry.Extensions.Logging" Version="2.1.5" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Sentry.png" Pack="true" Visible="false" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" Visible="true" PackagePath="" />
  </ItemGroup>

</Project>
